{
    "name": "jj",
    "version": "2.7.1",
    "description": "A minimal DOM manipulation library with web components",
    "keywords": [
        "javascript",
        "language",
        "DOM",
        "typescript",
        "imperative programming",
        "no-build",
        "ai-friendly",
        "llm-optimized",
        "cursor-rules",
        "zero-dependency"
    ],
    "type": "module",
    "main": "./lib/index.js",
    "unpkg": "./lib/bundle.js",
    "exports": {
        "import": "./lib/bundle.js",
        "require": "./lib/bundle.cjs",
        "types": "./lib/bundle.d.ts"
    },
    "directories": {
        "lib": "lib",
        "doc": "doc",
        "test": "test"
    },
    "files": [
        "lib",
        "SKILL.md"
    ],
    "scripts": {
        "doc": "typedoc src/index.ts",
        "prebuild": "rm -rf lib doc",
        "build": "tsup --dts && npm run doc",
        "typecheck": "tsc --noEmit",
        "fmt": "prettier --write .",
        "test": "npm run typecheck && node --import tsx --test",
        "test:watch": "npm run typecheck && node --import tsx --test --watch",
        "test:coverage": "npm run typecheck && node --import tsx --test --experimental-test-coverage",
        "get-bundle-size": "gzip -9 -c lib/bundle.min.js | wc -c | numfmt --to=iec-i --suffix=B",
        "preversion": "npm run fmt && npm t",
        "prepublishOnly": "npm run build",
        "postversion": "git push && git push --tags"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/alexewerlof/jj.git"
    },
    "author": "Alex Ewerl√∂f",
    "license": "MIT",
    "devDependencies": {
        "@types/jsdom": "^27.0.0",
        "@types/node": "^24.7.2",
        "jsdom": "^27.4.0",
        "prettier": "^3.6.2",
        "tsup": "^8.5.1",
        "tsx": "^4.20.6",
        "typedoc": "^0.28.14",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "jty": "^4.0.0"
    }
}
