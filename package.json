{
    "name": "jj",
    "version": "2.3.0",
    "description": "A minimal DOM manipulation library with web components",
    "keywords": [
        "javascript",
        "language",
        "DOM",
        "typescript",
        "imperative programming"
    ],
    "type": "module",
    "main": "./lib/index.js",
    "unpkg": "./lib/bundle.js",
    "exports": {
        ".": {
            "types": "./lib/index.d.ts",
            "import": "./lib/index.js"
        },
        "./lib/bundle.js": {
            "types": "./lib/index.d.ts",
            "import": "./lib/bundle.js"
        },
        "./lib/bundle.min.js": {
            "types": "./lib/index.d.ts",
            "import": "./lib/bundle.min.js"
        }
    },
    "directories": {
        "lib": "lib",
        "doc": "doc",
        "test": "test"
    },
    "files": [
        "lib"
    ],
    "scripts": {
        "doc": "typedoc src/index.ts",
        "prebuild": "rm -rf lib docs",
        "build": "tsc && node bundle.js && npm run doc",
        "typecheck": "tsc --noEmit",
        "fmt": "prettier --write .",
        "test": "npm run typecheck && node --import tsx --test",
        "test:watch": "npm run typecheck && node --import tsx --test --watch",
        "test:coverage": "npm run typecheck && node --import tsx --test --experimental-test-coverage",
        "preversion": "npm run fmt && npm t",
        "prepublishOnly": "npm run build",
        "postversion": "git push && git push --tags"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/alexewerlof/jj.git"
    },
    "author": "Alex Ewerl√∂f",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^24.7.2",
        "esbuild": "^0.27.2",
        "prettier": "^3.6.2",
        "tsx": "^4.20.6",
        "typedoc": "^0.28.14",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "jty": "^4.0.0"
    }
}
